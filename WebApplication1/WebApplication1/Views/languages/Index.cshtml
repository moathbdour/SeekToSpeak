@model IEnumerable<WebApplication1.Models.language>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main_Admin2.cshtml";
}

<h2>Index</h2>
<div class="card-body">
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped mb-0 text-muted">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.language_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.language_image)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.language_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.language_image)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.language_id }, new { @class = "btn btn-warning" })
                        |
                        @Html.ActionLink("Details", "Details", new { id = item.language_id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.language_id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>